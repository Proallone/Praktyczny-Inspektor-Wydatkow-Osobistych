<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/predict_expense_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp"
    android:background="@drawable/background_gradient_list">
    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:textColor="@color/white"
                android:background="@drawable/relative_rounded"
                android:text="Przewiduj"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/relative_rounded"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Tutaj będą informacje związane z przewidywanymi wydatkami"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>