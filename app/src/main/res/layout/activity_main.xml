<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15sp"
    android:background="@drawable/background_gradient_list">
    <RelativeLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@mipmap/logo_transparent_foreground" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/relative_rounded">
            <TextView
                android:id="@+id/summary_text"
                android:layout_width="200sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:text="@string/summary"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/summary_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:padding="20sp"/>
            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330sp"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/expenses_overview_listview"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp"/>
            <Button
                android:id="@+id/enter_expense"
                style="@style/RedTheme"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/relative_rounded"
                android:layout_gravity="center"
                android:text="@string/input"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10sp"/>
            <Button
                android:id="@+id/enter_category"
                style="@style/RedTheme"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/relative_rounded"
                android:layout_gravity="center"
                android:text="Wprowadź kategorię"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>